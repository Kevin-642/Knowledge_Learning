{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('assets/css/reset.css') }}" type="text/css" />

<div class="container reset my-5">
    <div class="reset-form">
        <div class="p-2">
            <h2>Modifier votre mot de passe</h2>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(resetForm) }}

            <div class="form-group">
                {{ form_row(resetForm.plainPassword.first, {
                    label: "Nouveau mot de passe",
                    attr: { class: "form-control mb-2" }
                }) }}
                {{ form_row(resetForm.plainPassword.second, {
                    label: "Confirmer le mot de passe",
                    attr: { class: "form-control mb-2" }
                }) }}
            </div>

            <div class="form-text text-muted mb-3">
                Le mot de passe doit contenir au moins 8 caract√®res, avec une combinaison de lettres et de chiffres.
            </div>

            <button type="submit" class="btn btn-primary">Modifier votre mot de passe</button>

            {{ form_end(resetForm) }}
        </div>
    </div>
</div>

{% endblock %}